<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="standardLayout">
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:color">@color/colorAccent</item>
    </style>
    <style name="radioButton">
        <item name="android:checked">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="radioGroup">
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="textViewOnImage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="relativImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="textViewScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">24sp</item>
    </style>
</resources>

